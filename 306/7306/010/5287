<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>وفي ٢/ ٦٢ <span class="c2">(٥٢٩٠)</span> قال: حدَّثنا عبد الرحمن، حدثنا شعبة، عن الحكم، وسلمة بن كهيل. وفي ٢/ ٧٩ <span class="c2">(٥٥٠٦)</span> قال: حدَّثنا مُحَمَّد، حدثنا شعبة، عن سلمة بن كهيل. وفي ٢/ ٨١ <span class="c2">(٥٥٣٨)</span> قال: حدثنا مُحَمَّد، حدثنا شعبة، عن الحكم. و<span class="c1">"الدارمي"</span> ١٥١٨ قال: أخبرنا أبو الوليد الطيالسي، حدثنا شعبة، أخبرني الحكم، وسلمة بن كهيل.<span class="c5"> وفي ١٥١٩ قال:</span> حدَّثنا سعيد بن الربيع.<span class="c5"> قال:</span> حدَّثنا شعبة، إسناده، نحوه. و<span class="c1">"مسلم"</span> ٤/ ٧٥ <span class="c2">(٣٠٩٠)</span> قال: حدَّثنا مُحَمَّد بن المثنى، حدثنا عبد الرحمن بن مهدي، حدثنا شعبة، عن الحكم، وسلمة بن كهيل. وفي <span class="c2">(٣٠٩١)</span> قال: وحدَّثنيه زهير بن حرب، حدثنا وكيع، حدثنا شعبة، بهذا الإسناد. وفي <span class="c2">(٣٠٩٢)</span> قال: وحدَّثنا عبد بن حميد، أخبرنا عبد الرزاق، أخبرنا الثوري، عن سلمة بن كهيل. وفي <span class="c2">(٣٠٩٣)</span> قال: وحدَّثنا أبو بكر بن أبي شيبة، حدثنا عبد الله بن نُمَيْر، حدثنا إسماعيل بن أبي خالد، عن أبي إسحاق. و<span class="c1">"أبو داود"</span> ١٩٣١ قال: حدَّثنا ابن العلاء، حدثنا أبو أسامة، عن إسماعيل، عن إسحاق. وفي <span class="c2">(١٩٣٢)</span> قال: حدَّثنا مسدد، حدثنا يحيى، عن شعبة، حدثني سلمة بن كهيل. والتِّرْمِذِيّ<span class="c1">" ٨٨٨ قال: حدَّثنا<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></span></p>
<p><span class="anchor" id="p2"></span>مُحَمَّد بن بشار، حدثنا يحيى بن سعيد، عن إسماعيل بن أبي خالد، عن أبي إسحاق. و"النَّسائي<span class="c1">" ١/ ٢٣٩، وفي "</span>الكبرى<span class="c1">" ٣٧٦ قال: أخبرنا مُحَمَّد بن عبد الأعلى.<span class="c5"> قال:</span> حدَّثنا خالد.<span class="c5"> قال:</span> حدَّثنا شعبة، عن سلمة بن كهيل. وفي ١/ ٢٣٩، وفي "</span>الكبرى<span class="c1">" ٣٨٣ قال: أخبرنا عمرو بن يزيد.<span class="c5"> قال:</span> حدَّثنا بهز بن أسد.<span class="c5"> قال:</span> حدَّثنا شعبة.<span class="c5"> قال:</span> أخبرني الحكم. وي ١/ ٢٤٠، وفي "</span>الكبرى<span class="c1">" ٣٨٤ قال: أخبرنا عمرو بن يزيد.<span class="c5"> قال:</span> حدَّثنا بهز بن أسد.<span class="c5"> قال:</span> حدَّثنا شعبة.<span class="c5"> قال:</span> حدَّثنا سلمة بن كهيل. وفي ١/ ٢٩١، وفي "</span>الكبرى<span class="c1">" ١٥٩٠ قال: حدَّثنا يعقوب بن إبراهيم.<span class="c5"> قال:</span> حدَّثناهشيم، عن إسماعيل بن أبي خالد.<span class="c5"> قال:</span> حدَّثنا أبو إسحاق. وفي ٢/ ١٦، وفي "</span>الكبرى<span class="c1">" ١٦٣٣ قال: أخبرنا علي بن حجر.<span class="c5"> قال:</span> أنبأنا شريك، عن سلمة بن كهيل. وفي ٢/ ١٦، وفي "</span>الكبرى<span class="c1">" ١٦٣٤ قال: أخبرنا مُحَمَّد بن المثنى.<span class="c5"> قال:</span> حدَّثنا عبد الرحمن.<span class="c5"> قال:</span> حدَّثنا شعبة، عن الحكم، وسلمة بن كهيل. وفي ٢/ ١٦، وفي "</span>الكبرى<span class="c1">" ١٦٣٥ قال: أخبرنا عمرو بن علي.<span class="c5"> قال:</span> حدَّثنا يحيى بن سعيد.<span class="c5"> قال:</span> حدَّثنا إسماعيل، وهو ابن أبي خالد.<span class="c5"> قال:</span> حدَّثني أبو إسحاق. وفي ٥/ ٢٦٠، وفي "</span>الكبرى<span class="c1">" ٤٠١٣ قال: أخبرنا عمرو بن منصور.<span class="c5"> قال:</span> حدَّثنا أبو نعيم.<span class="c5"> قال:</span> حدَّثنا سُفْيان. عن سلمة. وفي "</span>الكبرى" ٤٠١٢ قال: أخبرنا<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>