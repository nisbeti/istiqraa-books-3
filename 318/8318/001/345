</span> <span class="c2">(٩/ ١٦٩)</span>، <span class="c1">"بديعة البيان"</span> ص <span class="c2">(١٨٥)</span>، <span class="c1">"النجوم الزاهرة"</span> <span class="c2">(٤/ ٢٨٣)</span>، <span class="c1">"فتح المغيث"</span> <span class="c2">(٤/ ٣٥٩)</span>، <span class="c1">"المتكلمون في الرجال"</span> برقم <span class="c2">(١١٥)</span>، <span class="c1">"الشذرات"</span> <span class="c2">(٥/ ١٢٨)</span>، <span class="c1">"الرسالة المستطرفة"</span> ص <span class="c2">(١٠٣، ١٣٧)</span>، <span class="c1">"معجم المؤلفين"</span> <span class="c2">(٤/ ٨٢)</span>، <span class="c1">"كشف الظنون"</span> <span class="c2">(٥/ ٣٣٥)</span>، مقدمة <span class="c1">"تاريخ جرجان"</span> ص <span class="c2">(١٢ - ١٨)</span>.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>