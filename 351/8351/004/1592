<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>الدم <span class="c2">(٣١٩، ٣٢٠)</span>، التاريخ لابن معين <span class="c2">(٣/ ١٩٣، ٤/ ٤٦٢)</span>، سؤالات ابن الجنيد <span class="c2">(٤٣١)</span>، من كلام أبي زكريا <span class="c2">(٤٨)</span>، التاريخ الكبير <span class="c2">(٦/ ٣٤٢، ٣٤٣)</span>، الضعفاء للبخاري <span class="c2">(٨٨)</span>، الجرح والتعديل <span class="c2">(٦/ ٢٣٨، ٢٣٩)</span>، المراسيل <span class="c2">(٩٠)</span>، السؤالات والضعفاء لأبي زرعة <span class="c2">(٢/ ٧٢٧)</span>، إيضاح الإشكال <span class="c2">(٢٩، ٣٠)</span>، سنن الترمذي <span class="c2">(٢/ ١٤٠، ٣/ ٣٣)</span>، العلل الكبير <span class="c2">(١/ ٢٨٨)</span>، الضعفاء للعقيلي <span class="c2">(٣/ ٢٧٣، ٢٧٤)</span>، الثقات للعجلي <span class="c2">(٢/ ١٧٨)</span>، المجروحين <span class="c2">(٢/ ٧١ - ٧٤)</span>، تعليقات الدارقطني <span class="c2">(١٦٧، ١٦٨)</span>، الثقات لابن شاهين <span class="c2">(١٥١، ١٥٢)</span>، الضعفاء لابن الجوزي <span class="c2">(٢/ ٢٢٧)</span>، تهذيب الأسماء واللغات <span class="c2">(٢/ ٢٨ - ٣٠)</span>، مجموع الفتاوى <span class="c2">(١٨/ ٨، ٩)</span>، تهذيب الكمال <span class="c2">(٢٢/ ٦٤ - ٧٦)</span>، نصب الراية <span class="c2">(٢/ ٣٣١، ٣٣٢)</span>، جامع التحصيل<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>