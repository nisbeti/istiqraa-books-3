<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>وأخرجه البخاري <span class="c2">(١)</span> ومسلم <span class="c2">(٢)</span> والتِّرْمِذِيّ <span class="c2">(٣)</span> وابن ماجة <span class="c2">(٤)</span> والنَّسائي <span class="c2">(٥)</span> والإمام أحمد <span class="c2">(٦)</span> من طرق عن الزُّهْرِيّ عن عُبَيْد اللَّه بن عَبْد اللَّه بن عُتْبَة بن مَسْعُود، عن أبي هُرَيْرَة، وَزَيْد بن خالد الْجُهَنِيّ، بلفظه.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>* * * * *<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<hr>
<p class="hamesh">(١) البخاري، الجامع المسند الصحيح: كتاب الصّلح، باب إذا اصطلحوا على صلح جور فالصّلح مردود، رقم (٢٦٩٥)، ٣/ ١٨٤، وفي كتاب الشّروط، رقم (٢٧٢٤)، ٣/ ١٩١، وفي كتاب الحدود، رقم (٦٨٢٧)، ٨/ ١٦٧.<br>(٢) مسلم، المسند الصحيح المختصر: كتاب الحدود، باب من اعترف على نفسه بالزّنا، رقم (١٦٩٧)، ٣/ ١٣٢٤.<br>(٣) التِّرْمِذِيّ، سنن التِّرْمِذِيّ: أبواب الحدود، باب ما جاء في الرَّجْم على الثَّيِّب، رقم (١٤٣٣)، ٤/ ٣٩.<br>(٤) ابن ماجة، سنن ابن ماجة: كتاب الحدود، باب حد الزّنا، رقم (٢٥٤٩)، ٢/ ٨٥٢.<br>(٥) النَّسائي، المجتبى: كتاب آداب القضاء، باب صون النّساء عن مجلس الحكم، رقم (٥٤١١)، ٨/ ٢٤١.<br>(٦) الإمام أحمد، المسند: بقية حديث زيد بن خالد الجهني عن النبي - صلى الله عليه وسلم -، رقم (١٧٠٣٨)، ٢٨/ ٢٦٨، ورقم (١٧٠٤٢)، ٢٨/ ٢٧٤.</p> </div>