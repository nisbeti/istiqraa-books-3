<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>١/ ١١٠ <span class="c2">(٤٠١)</span> قال: حدَّثنا عثمان،<span class="c5"> قال:</span> حدَّثنا جرير. وفي ٨/ ١٧٠ <span class="c2">(٦٦٧١)</span> قال: حدثني إسحاق بن إبراهيم، سَمع عبدَ العزيز بن عبد الصمد. و) مسلم) ٢/ ٨٤ <span class="c2">(١٢١١)</span> قال: حدَّثنا عثمان، وأبو بكر، ابنا أبي شيبة، وإسحاق بن إبراهيم، جميعا عن جرير.<span class="c5"> قال عثمان:</span> حدَّثنا جرير. وفي <span class="c2">(١٢١٢)</span> قال: وحدَّثناه أبو كريب، حدَّثنا ابن بشر <span class="c2">(ح)</span> قال: وحدثني محمد بن حاتم، حدَّثنا وكيع، كلاهما عن مسعر. وفي <span class="c2">(١٢١٣)</span> قال: وحدَّثناه عبد اللهِ بن عبد الرحمن الدارمي، أَخْبَرنا يحيى بن حسان، حدَّثنا وهيب بن خالد. وفي <span class="c2">(١٢١٤)</span> قال: حدَّثناه إسحاق بن إبراهيم، أَخْبَرنا عُبيد بن سعيد الأموي، حدَّثنا سفيان. وفي ٢/ ٨٥ <span class="c2">(١٢١٥)</span> قال: حدَّثناه محمد بن المثنى، حدَّثنا محمد بن جعفر، حدَّثنا شعبة. وفي <span class="c2">(١٢١٦)</span> قال: وحدَّثناه يحيى بن يحيى، أَخْبَرنا فضيل بن عياض. وفي <span class="c2">(١٢١٧)</span> قال: وحدَّثناه ابن أبي عمر، حدَّثنا عبد العزيز بن عبد الصمد.<span class="c5"> و) أبو داود) ١٠٢٠ قال:</span> حدَّثنا عثمان بن أبي شيبة، حدَّثنا جرير.<span class="c5"> و) اابن ماجة) ١٢١ قال:</span> حدَّثنا محمد بن بشار، حدَّثنا محمد بن جعفر، حدَّثنا شعبة. وفي <span class="c2">(١٢١٢)</span> قال: حدَّثنا علي بن محمد، حدَّثنا وكيع، عن مسعر. وفي <span class="c2">(١٢١٨)</span> قال: حدَّثنا أبو بكر بن خلاد، حدَّثنا سفيان بن عيينة. و<span class="c1">"النَّسائي"</span> ٣/ ٢٨، وفي <span class="c1">"الكبرى"</span> ١١٦٤ قال: أَخْبَرنا محمد بن رافع،<span class="c5"> قال:</span> حدَّثنا يحيى بن آدم،<span class="c5"> قال:</span> حدَّثنا مفضل، وهو ابن مُهَلْهِل. وفي ٣/ ٢٨، وفي <span class="c1">"الكبرى"</span> ١١٦٥ قال: أَخْبَرنا محمد<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>بن عبد اللهِ بن المبارك المخرمي،<span class="c5"> قال:</span> حدَّثنا وكيع، عن مِسْعَر. وفي ٣/ ٢٨، وفي <span class="c1">"الكبرى"</span> ١١٦٦ قال: أَخْبَرنا سويد بن نصر،<span class="c5"> قال:</span> أنبأنا عبد اللهِ، عن مِسْعَر. وفي ٣/ ٢٨ وفي <span class="c1">"الكبرى"</span> ٥٨٥ و ١١٦٧ قال: أَخْبَرنا الحسن بن إسماعيل بن سليمان المجالدي،<span class="c5"> قال:</span> حدَّثنا الفضيل، يعني ابن عياض. وفي ٣/ ٢٩، وفي <span class="c1">"الكبرى"</span> ١١٦٨ قال: أَخْبَرنا إسماعيل بن مسعود،<span class="c5"> قال:</span> حدَّثنا خالد بن الحارث، عن شعبة. و) ابن خزيمة <span class="c2">(١٠٢٨ قال: حدَّثنا يوسف بن موسى، وزياد بن أيوب،<span class="c5"> قالا:</span> حدَّثنا جرير (ح)</span> وحدَّثنا أحمد بن عبدة، أَخْبَرنا<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>