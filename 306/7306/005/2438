<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>وفي <span class="c2">(٨٦١)</span> قال: حدَّثنا عَبَّاد بن مُوسَى الخُتَّلِي، حدَّثنا إِسْمَاعِيل، يَعْنِي ابن جَعْفَر، أخبرني يَحيى بن علي بن يَحيى بن خَلَاّد بن رافع الزُّرَقِي. و<span class="c1">"ابن ماجة"</span> ٤٦٠ قال: حدَّثنا مُحَمد بن يَحيى، حدَّثنا حَجَّاج، حدَّثنا هَمَّام، حدَّثنا إِسْحَاق بن عَبْد اللهِ بن أَبِي طَلْحَة. و<span class="c1">"النَّسائي"</span> ٢/ ٢٠، وفي <span class="c1">"الكبرى"</span> ١٦٤٣ قال: أخبرنا علي بن حُجْر،<span class="c5"> قال:</span> أنبأنا إِسْمَاعِيل،<span class="c5"> قال:</span> حدَّثنا يَحيى بن علي بن يَحيى بن خَلَاّد بن رِفَاعَة بن رافع الزُّرَقِي. وفي ٢/ ٢٢٥، وفي <span class="c1">"الكبرى"</span> ٧٢٦ قال: أخبرنا مُحَمد بن عَبْد اللهِ بن يَزِيد المُقْرِئ، أبو يَحيى، بمَكَّة، وهو بَصْرِيُّ،<span class="c5"> قال:</span> حدَّثنا أَبِي،<span class="c5"> قال:</span> حدَّثنا هَمَّام،<span class="c5"> قال:</span> حدَّثنا إِسْحَاق بن عَبْد اللهِ بن أَبِي طَلْحَة. و<span class="c1">"ابن خزيمة"</span> ٥٤٥ قال: حدَّثنا علي بن حُجْر السَّعْدِي، حدَّثنا إِسْمَاعِيل، يَعْنِي ابن جَعْفَر، حدَّثنا يَحيى بن علي بن يَحيى بن خَلَاّد بن رافع الزُّرَقِي. وفي <span class="c2">(٥٩٧ و ٦٣٨)</span> قال: حدَّثنا مُؤَمَّل بن هِشَام اليَشْكُرِي، حدَّثنا إِسْمَاعِيل، يَعْنِي ابن عُلَيَّة، عن مُحَمد بن إِسْحَاق.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>ثثلاتهم <span class="c2">(إِسْحَاق بن عَبْد اللهِ، ومُحَمد بن إِسْحَاق، ويَحيى بن علي)</span> عن علي بن يَحيى بن خَلَاّد، عن أبيه، عن عمِّه رِفَاعَة بن رافع، فذكره.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>-<span class="c5"> في رواية الدَّارِمِي:</span> عن عَمِّه رِفَاعَة بن رافع، وكان رِفَاعَة ومالك ابني رافع أخوين، من أهل بَدْر.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>-<span class="c5"> وفي رواية مُحَمد بن عَمْرو:</span> عن علي بن يَحيى بن خَلَاّد الزُّرَقِي، أحسبه عن أبيه، عن رِفَاعَة بن رافع الزُّرَقِي، وكان من أصحابِ النَّبِيِّ صلى الله عليه وسلم.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>أخرجه أحمد ٤/ ٣٤٠ <span class="c2">(١٩٢٠٦)</span> قال: حدَّثنا يَحيى بن سَعِيد، حدَّثنا ابن عَجْلَان. و<span class="c1">"البُخَارِي"</span>، في <span class="c2">(جزء القراءة)</span> ١٠١ قال: حدَّثنا إبراهيم بن حَمْزَة، عن حاتم بن إِسْمَاعِيل، عن ابن عَجْلَان. وفي <span class="c2">(١٠٢)</span> قال: حدَّثنا إِسْمَاعِيل،<span class="c5"> قال:</span> حدَّثني أخي، عن سُلَيْمَان، عن ابن عَجْلَان <span class="c2">(ح)</span> وحدَّثنا الحَسَن بن الرَّبِيع،<span class="c5"> قال:</span> حدَّثنا ابن إِدْرِيس، عن ابن عَجْلَان. وفي <span class="c2">(١٠٣)</span> قال: حدَّثنا قُتَيْبَة،<span class="c5"> قال:</span> حدَّثنا اللَّيْث، عن ابن عَجْلَان. وفي <span class="c2">(١٠٨)</span> قال: حدَّثنا أبو نُعَيْم،<span class="c5"> قال:</span> حدَّثنا داود بن قَيْس الفَرَّاء. وفي <span class="c2">(١٠٩)</span> قال: حدَّثنا مُحَمد،<span class="c5"> قال:</span> حدَّثنا عَبْد اللهِ،<span class="c5"> قال:</span> حدَّثنا داود. وفي <span class="c2">(١١١)</span> قال: حدَّثنا مُسَدَّد،<span class="c5"> قال:</span> حدَّثنا يَحيى، عن مُحَمد بن عَجْلَان. وفي <span class="c2">(١١٢)</span> قال: حدَّثنا قُتَيْبَة،<span class="c5"> قال:</span> حدَّثنا بَكْر، عن ابن عَجْلَان. و<span class="c1">"النَّسائي"</span> ٢/ ١٩٣، وفي <span class="c1">"الكبرى"</span> ٦٤٤ قال: أخبرنا قُتَيْبَة،<span class="c5"> قال:</span> حدَّثنا بَكْر بن مُضَر، عن ابن عَجْلَان. وفي ٣/ ٥٩، وفي <span class="c1">"الكبرى"</span> ١٢٣٧ قال: أخبرنا قُتَيْبَة،<span class="c5"> قال:</span> حدَّثنا اللَّيْث، عن ابن عَجْلَان. وفي ٣/ ٦٠، وفي <span class="c1">"الكبرى"</span> ١٢٣٨ قال: أخبرنا سُوَيْد بن نَصْر،<span class="c5"> قال:</span> أنبأنا عَبْد اللهِ بن المُبَارك، عن داود بن قَيْس.<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p6"></span>كلاهما <span class="c2">(ابن عَجْلَان , داود)</span> عن علي بن يَحيى بن خَلَاّد، عن أبيه، عن عمِّه، وكان بَدْرِيًّا، فذكره.<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p7"></span>ولم يُسَمِّهِ.<a href="#p7" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p8"></span>- وأخرجه التِّرْمِذِي <span class="c2">(٣٠٢)</span> قال: حدَّثنا علي بن حُجْر،<span class="c5"> قال:</span> أخبرنا إِسْمَاعِيل بن جَعْفَر، عن يَحيى بن علي بن يَحيى بن خَلَاّد بن رافع الزُّرَقي، عن جَدِّه، عن رِفَاعَة، فذكره.<a href="#p8" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p9"></span><span class="c5">لم يقل:</span> <span class="c2">(عن أبيه.<a href="#p9" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></span></p>
<p><span class="anchor" id="p10"></span>- وأخرجه أحمد ٤/ ٣٤٠ (١٩٢٠٤) قال: حدَّثنا يَزِيد بن هارون. و<span class="c1">"أبو داود"</span> ٨٥٩ قال: حدَّثنا وَهْب بن بَقِيَّة، عن خالد.<a href="#p10" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p11"></span>كلاهما <span class="c2">(يَزِيد، وخالد بن عَبْد اللهِ)</span> عن مُحَمد بن عَمْرو، عن علي بن يَحيى بن خَلَاّد، عن رِفَاعَة بن رافع، فذكره.<a href="#p11" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p12"></span><span class="c5">ليس فيه:</span> عن أبيه.<a href="#p12" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>