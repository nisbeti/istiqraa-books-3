<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span><span class="c1">"السنن الكبرى"</span> <span class="c2">(١/ ٤ /ك: الطّهارة، باب التطهير بماء البحر)</span>، <span class="c2">(٤/ ٤٢٨)</span> / ك: الحجِّ، باب المضنو في بدنه لا يثبت على مركب)، وانظر - أيضًا - <span class="c2">(١/ ٧٦، ٧٩، ١٠٨، ١٧٦، ٢١٢، ٢٤٠)</span>، <span class="c2">(٢/ ٣٩)</span>، <span class="c2">(٣/ ٢٢٨، ٣٩٦)</span>، <span class="c2">(٤/ ٥٦)</span>، <span class="c2">(٦/ ٤٠)</span>، <span class="c1">"المدخل إلى السنن"</span> <span class="c2">(٢/ ١٦٨)</span>، <span class="c1">"الشعب"</span> <span class="c2">(٩/ ٧٥)</span>، <span class="c2">(١٠/ ٤٠٥)</span>، <span class="c2">(١١/ ٢٧)</span>، <span class="c2">(١٢/ ٦١)</span>، <span class="c1">"الخلافيات"</span> <span class="c2">(١/ ٣٣٤، ٤٣٣)</span>، <span class="c2">(٢/ ٢٤٥)</span>، <span class="c2">(٣/ ١٧)</span>، <span class="c1">"القضاء والقدر"</span> <span class="c2">(١/ ٣٧٢)</span>، <span class="c2">(٢/ ٦٦٥)</span>، <span class="c1">"فضائل الأوقات"</span> برقم <span class="c2">(١٥٣)</span>، <span class="c1">"إثبات عذاب القبر"</span> برقم <span class="c2">(٢٦٢)</span>. مختصر تاريخ نيسابور <span class="c2">(٤٥/ ب)</span>، الإرشاد <span class="c2">(٣/ ٨٥٥)</span>، تاريخ بغداد <span class="c2">(١١/ ٢٧٢)</span>، المنتخب من السياق <span class="c2">(١٢١٦)</span>، الأنساب <span class="c2">(٤/ ١١٠)</span>، مختصره <span class="c2">(٢/ ٣١٤)</span>، تبيين كذب المفتري <span class="c2">(٢٤١)</span>، المنتظم <span class="c2">(١٥/ ١٧٩)</span>، تكملة الإكمال <span class="c2">(٤/ ٢٤٩)</span>، الكامل في التاريخ <span class="c2">(٧/ ٣٢٧)</span>، طبقات ابن الصلاح <span class="c2">(٢/ ٦٥٠)</span>، طبقات علماء الحديث <span class="c2">(٣/ ٣٩٦)</span>، تذكرة الحفاظ <span class="c2">(٣/ ١٠٧٢)</span>، النُّبَلاء <span class="c2">(١٧/ ٣٣٣)</span>، تاريخ الإسلام <span class="c2">(٢٨/ ٤٢٨)</span>، العبر <span class="c2">(٢/ ٢٣٣)</span>، الإعلام <span class="c2">(١/ ٢٨١)</span>، المعين <span class="c2">(١٣٧١)</span>، الوافي بالوفيات <span class="c2">(٢٢/ ٤٢