<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>والتِّرْمِذِيّ<span class="c1">" ٥٨٤ قال: حدَّثنا أحمد بن مُحَمد، حدَّثنا عَبْد الله بن المُبَارك، أخبرنا خالد بن عَبْد الرَّحْمان. و"</span>النَّسائي<span class="c1">" ٢/ ٢١٦، وفي "</span>الكبرى<span class="c1">" ٧٠٧ قال: أخبرنا سُوَيْد بن نَصْر،<span class="c5"> قال:</span> أنبانا عَبْد الله بن المُبَارك، عن خالد بن عَبْد الرَّحْمان، هو السُّلَمِي. و"</span>ابن خزيمة<span class="c1">" ٦٧٥ قال: حدَّثنا يَعْقُوب الدَّوْرَقِي، ومُحَمد بن عَبْد الأَعْلَى،<span class="c5"> قالا:</span> حدَّثنا بِشْر بن مُفَضَّل.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></span></p>
<p><span class="anchor" id="p2"></span>كلاهما <span class="c2">(بِشْر، وخالد)</span> عن غالب القَطَّان، عن بَكْر بن عَبْد الله المُزَنِي، فذكره.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>٤٠٦ - عَنْ قَتَادَةَ، عَنْ أَنَسٍ، عَنِ النَّبِيِّ صلى الله عليه وسلم،<span class="c5"> قَالَ:</span><a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>اعْتَدِلُوا فِي السُّجُودِ، وَلَا يَبْسُطْ أَحَدُكُمْ ذِرَاعَيْهِ انْبِسَاطَ الْكَلْبِ.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>أخرجه أحمد ٣/ ١٠٩ <span class="c2">(١٢٠٨٩)</span> قال: حدَّثنا ابن أَبي عَدِي، وعَبْد الوَهَّاب الخَفَّاف، عن سَعِيد. وفي ٣/ ١١٥ <span class="c2">(١٢١٧٣)</span> و ٣/ ٢٧٤ <span class="c2">(١٣٩٣٥)</span> قال: حدَّثنا يَحيى، عن شُعْبة. وفي ٣/ ١٧٧ <span class="c2">(١٢٨٤٣)</span> و ٣/ ٢٧٤ <span class="c2">(١٣٩٣٣)</span> قال: حدَّثنا مُحَمد بن جَعْفَر، حدَّثنا شُعْبة <span class="c2">(ح)</span> وحَجَّاج،<span class="c5"> قال:</span> حدَّثني شُعْبة. وفي ٣/ ١٧٩ <span class="c2">(١٢٨٧١)</span> و ٣/ ٢٧٤ <span class="c2">(١٣٩٣٤)</span> قال: حدَّثنا وَكِيع، حدَّثنا شُعْبة. وفي ٣/ ١٩١ <span class="c2">(١٣٠٢٢)</span> قال: حدَّثنا بَهْز، حدَّثنا هَمَّام <span class="c2">(ح)</span> وحدَّثنا عَفَّان،<span class="c5"> قال:</span> حدَّثنا يَزِيد بن إبراهيم. وفي ٣/ ٢٠٢ <span class="c2">(١٣١٢٢)</span> و ٣/ ٢٧٤ <span class="c2">(١٣٩٣٦)</span> قال: حدَّثنا يَزِيد، أنبانا شُعْبة. وفي ٣/ ٢١٤ <span class="c2">(١٣٢٦٥)</span> قال: حدَّثنا عَبْد الملك بن عَمْرو، حدَّثنا هِشَام. وفي ٣/ ٢٣١ <span class="c2">(١٣٤٥٣)</span> قال: حدَّثنا مُحَمد بن يَزِيد، عن أَيُّوب، يَعْنِي القَصَّاب، أَبي العَلَاء. وفي ٣/ ٢٧٤ <span class="c2">(١٣٩٣٧)</span> قال: حدَّثنا هاشم بن القاسِم، حدَّثنا شُعْبة. وفي ٣/ ٢٩١ <span class="c2">(١٤١٤٣)</span> قال: حدَّثنا بَهْز، حدَّثنا شُعْبة. و"الدارِمِي<span class="c1">" ١٣٢٢ قال: أخبرنا هاشم بن القاسِم، وسَعِيد بن الرَّبِيع،<span class="c5"> قالا:</span> حدَّثنا شُعْبة. و"</span>البُخَاريّ<span class="c1">" ١/ ١٤١ <span class="c2">(٥٣٢)</span> قال: حدَّثنا حَفْص بن عُمَر،<span class="c5"> قال:</span> حدَّثنا يَزِيد بن إبراهيم. وفي ١/ ٢٠٨ <span class="c2">(٨٢٢)</span> قال: حدَّثنا مُحَمد بن بَشَّار،<span class="c5"> قال:</span> حدَّثنا مُحَمد بن جَعْفَر،<span class="c5"> قال:</span> حدَّثنا شُعْبة. و"</span>مسلم<span class="c1">" ٢/ ٥٣ <span class="c2">(١٠٣٧)</span> قال: حدَّثنا أبو بَكْر بن أَبي شَيْبَة، حدَّثنا وَكِيع، عن شُعْبة. وفي <span class="c2">(١٠٣٨)</span> قال: حدَّثنا مُحَمد بن المُثَنَّى، وابن بَشَّار،<span class="c5"> قالا:</span> حدَّثنا مُحَمد بن جَعْفَر <span class="c2">(ح)</span> قال: وحدَّثنيه يَحيى بن حَبِيب، حدَّثنا خالد، يَعْنِي ابن الحارث،<span class="c5"> قالا:</span> حدَّثنا شُعْبة. و"</span>أبو داود<span class="c1">" ٨٩٧ قال:<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></span></p>
<p><span class="anchor" id="p6"></span>حدَّثنا مُسْلم بن إبراهيم، حدَّثنا شعْبة. و"ابن ماجة<span class="c1">" ٨٩٢ قال: حدَّثنا نَصْر بن علي الجَهْضَمِي، حدَّثنا عَبْد الأَعْلَى، حدَّثنا سَعِيد. والتِّرْمِذِيّ"</span> ٢٧٦ قال: حدَّثنا محمود بن غَيْلَان،<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>