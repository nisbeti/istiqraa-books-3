<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>وحدّثنا حسن الحُلواني، حدّثنا يعقوب، حدّثنا أَبي، عن صالح. وفي <span class="c2">(٢٨١٨)</span> قال: وحدّثنا يَحيى بن يَحيى، وأبو بكر بن أَبي شَيْبة، وعَمرو الناقد،<span class="c5"> قالوا:</span> حدّثنا سُفيان بن عُيَينَة. و<span class="c1">"ابن ماجة"</span> ٣٠٩٠ قال: حدّثنا أبو بكر بن أبي شَيْبة، وهشام بن عمار،<span class="c5"> قالا:</span> حدّثنا سفيان بن عُيينة <span class="c2">(ح)</span> وحدّثنا محمد بن رُمح، أنبأنا اللَّيْث بن<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>سعد.<span class="c5"> والتِّرْمِذِيّ" ٨٤٩ قال:</span> حدّثنا قُتيبة، حدّثنا اللَّيْث. وعَبد الله بن أحمد في زياداته على المسند ٤/ ٧١ <span class="c2">(١٦٧٧٤)</span> قال: حدّثنا محمد بن أَبي بكر، وهو المُقدِّمي،<span class="c5"> قال:</span> حدّثنا محمد بن ثابت العَبدي،<span class="c5"> قال:</span> حدّثنا عَمرو بن دينار وفي ٤/ ٧١ <span class="c2">(١٦٧٧٧)</span> قال: حدثني أبو خَيثمة، زُهير بن حرب.<span class="c5"> قال:</span> حدّثنا سُفيان. وفي ٤/ ٧١ <span class="c2">(١٦٧٨١)</span> قال: حدّثنا مُصْعب بن عبد الله،<span class="c5"> قال:</span> حدثني مالك بن أنس. وفي ٤/ ٧١ <span class="c2">(١٦٧٨٢)</span> قال: حدّثنا مَنْصُور بن أبي مُزاحم،<span class="c5"> قال:</span> حدّثنا أبو أُويس، عبد الله بن أُويس - سمعت منه في خلافة المهدي -. وفي ٤/ ٧٢ <span class="c2">(١٦٧٩٢)</span> قال: حدثني إسحاق بن مَنْصُور،<span class="c5"> قال:</span> أخبرنا يعقوب بن إبراهيم، يعني ابن سعد،<span class="c5"> قال:</span> أخبرنا أبي، عن صالح، يعني ابن كيسان. وفي ٤/ ٧٢ <span class="c2">(١٦٧٩٣)</span> قال: حدّثنا إسحاق،<span class="c5"> قال:</span> أخبرنا يعقوب بن إبراهيم،<span class="c5"> قال:</span> حدّثنا ابن أخي ابن شهاب. وفي ٤/ ٧٢ <span class="c2">(١٦٧٩٤)</span> قال: حدّثني إسحاق بن مَنْصُور،<span class="c5"> قال:</span> أخبرنا أبو اليَمَان، الحكم بن نافع،<span class="c5"> قال:</span> أخبرنا شُعيب. وفي ٤/ ٧٣ <span class="c2">(١٦٨٠٠)</span> حدّثنا إسحاق بن مَنْصُور الكَوْسَج،<span class="c5"> قال:</span> أخبرنا ابن شُميل، يعني النضْر،<span class="c5"> قال:</span> أخبرنا محمد، هو ابن عمرو. وفي ٤/ ٧٣ <span class="c2">(١٦٨٠٤)</span> حدّثنا إسحاق بن مَنْصُور،<span class="c5"> قال:</span> حدّثنا عبد الله بن الزَّبير، يعني الحُميدي،<span class="c5"> قال:</span> حدّثنا سُفيان. وفي ٤/ ٧٣ <span class="c2">(١٦٨٠٧)</span> حدّثنا إسحاق بن مَنْصُور،<span class="c5"> قال:</span> أخبرنا عبد الله بن مَسْلَمَة، عن مالك. وفي ٤/ ٧٣ <span class="c2">(١٦٨٠٨)</span> قال: حدّثنا إسحاق،<span class="c5"> قال:</span> أخبرنا رَوْح بن عُبادة مثله - يعني عن<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>