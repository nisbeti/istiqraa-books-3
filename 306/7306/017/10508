<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span><span class="c5">قال:</span> حدَّثنا عفان،<span class="c5"> قال:</span> حدَّثنا شُعبة. وفي ٢/ ٢٩٧ <span class="c2">(٧٩٤٨)</span> قال: حدَّثنا محمد بن جعفر، حدَّثنا شُعبة. و<span class="c1">"الدارِمِي"</span> ٢٦٨٩ قال: أخبرنا سعيد بن عامر، عن شُعبة. و<span class="c1">"البُخاري"</span> في <span class="c1">"الأدب المفرد"</span> ١٢٠٢، وفي <span class="c1">"خلق أفعال العباد"</span> ١٩ و ٧٣ قال: حدَّثنا سعيد بن الربيع،<span class="c5"> قال:</span> حدَّثنا شُعبة. وفي <span class="c2">(١٢٠٣)</span>، وفي <span class="c1">"خلق أفعال العباد"</span> ١٩ قال: حدَّثنا مُسَدَّد،<span class="c5"> قال:</span> حدَّثنا هشيم. وفي <span class="c1">"خلق أفعال العباد"</span> ١٩ و ٧٣ قال: حدَّثنا محمد بن بَشَّار، حدَّثنا غُنْدَر، حدَّثنا شُعبة.<span class="c5"> وفي ١٩ و ٧٣ قال:</span> حدَّثنا عَمرو بن عَوْن، حدَّثنا هُشَيم.<span class="c5"> وفي ٧٣ قال:</span> حدَّثنا قُتَيْبَة، حدَّثنا هُشَيم. و<span class="c1">"أبو داود"</span> ٥٠٦٧ قال: حدَّثنا مُسَدَّد، حدَّثنا هُشَيم. و<span class="c1">"التِّرمِذي"</span> ٣٣٩٢ قال: حدَّثنا محمود بن غَيْلان، حدَّثنا أبو داود،<span class="c5"> قال:</span> أنبأنا شُعْبَة. و<span class="c1">"النَّسائي"</span> في <span class="c1">"الكبرى"</span> ٧٦٤٤ قال: أخبرنا محمد بن عثمان،<span class="c5"> قال:</span> حدَّثنا عبد الرحمن،<span class="c5"> قال:</span> حدَّثنا هُشَيم. وفي <span class="c2">(٧٦٥٢ و ١٠٣٢٦)</span> قال: أخبرنا زياد بن أيوب،<span class="c5"> قال:</span> حدَّثنا هُشَيم. وفي <span class="c2">(٧٦٦٨ و ٩٧٥٥)</span> قال: أخبرنا محمد بن بَشَّار،<span class="c5"> قال:</span> حدَّثنا محمد،<span class="c5"> قال:</span> حدَّثنا شُعبة. وفي <span class="c2">(١٠٥٦٣)</span> قال: أخبرنا عبد الله بن محمد بن تميم،<span class="c5"> قال:</span> حدَّثنا حجاج، وهو ابن محمد،<span class="c5"> قال:</span> حدثني شُعبة. و<span class="c1">"أبو يَعْلَى"</span> ٧٧ قال: حدَّثنا عُبَيْد الله بن عُمَر، حدَّثنا عَبْد الرَّحْمان بن مَهْدِي، حدَّثنا هُشَيْم. و<span class="c1">"ابن حِبَّان"</span> ٩٦٢ قال: أخبرنا عَبْد الله بن مُحَمد الأزدي،<span class="c5"> قال:</span> حدَّثنا إسحاق بن إبراهيم،<span class="c5"> قال:</span> أخبرنا النَّضْر بن شُمَيْل،<span class="c5"> قال:</span> حدَّثنا شُعْبَة.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>كلاهما <span class="c2">(شُعبة، وهُشيم)</span> عن يَعْلى بن عطاء،<span class="c5"> قال:</span> سمعتُ عَمْرو بن عاصم يُحدِّث، فذكره.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>- قال البُخَارِي عقب رواية سعيد بن الربيع في <span class="c1">"خلق أفعال العباد"</span> ٧٣: ورواه مُعَاذ، وبَهْز، عن شُعْبَة.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>١٤٣٥٣ - عَنْ أَبِي زُرْعَةَ بْنِ عَمْرِو بْنِ جَرِيرٍ الْبَجَلِيِّ، عَنْ أَبِي هُرَيْرَةَ،<span class="c5"> قَالَ:</span> قَالَ رَسُولُ اللهِ صلى الله عليه وسلم:<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span><span class="c5">إِذَا أَصْبَحَ أَحَدُكُمْ فَلْيَقُلْ:</span> أَصْبَحْتُ أُثْنِيَ عَلَيْكَ حَمْدًا، وَأَشْهَدُ<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>