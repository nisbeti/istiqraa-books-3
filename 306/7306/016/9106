<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>أخرجه أحمد ٥/ ١٧١ <span class="c2">(٢١٨٣٤)</span> قال: حدَّثنا مكي بن إبراهيم، حدَّثنا عُبَيْد الله بن أبي زياد، عن شهر بن حوشب، عن ابن عم لأبي ذر، فذكره.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>اللباس والزينة<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>١٢٣٠٩ - عَنْ أَبِي الأَسْوَدِ الدِّيلِيِّ، عَنْ أَبِي ذَرٍّ،<span class="c5"> قَالَ:</span> قَالَ رَسُولُ اللهِ صلى الله عليه وسلم:<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span><span class="c5">إِنَّ أَحْسَنَ مَا غَيَّرْتُمْ بِهِ الشَّيْبَ:</span> الْحِنَّاءُ، وَالْكَتَمُ.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>أخرجه عبد الرَّزَّاق <span class="c2">(٢٠١٧٤)</span> قال: أَخْبَرنا معمر، عن سعيد الجريري. و<span class="c1">"ابن أبي شَيبة"</span> ٨/ ٢٤٤ <span class="c2">(٢٤٩٩١)</span> قال: حدَّثنا ابن إدريس، عن الأجلح. و<span class="c1">"أحمد"</span> ٥/ ١٤٧ <span class="c2">(٢١٦٣٢)</span> و ٥/ ١٥٠ <span class="c2">(٢١٦٦٤)</span> قال: حدَّثنا عبد الرَّزَّاق، أنبأنا معمر، عن سعيد الجريري. وفي ٥/ ١٥٠ <span class="c2">(٢١٦٦٣)</span> قال: حدَّثنا عبد الله بن إِدريس،<span class="c5"> قال:</span> سمعت الأجلح. وفي ٥/ ١٥٤ <span class="c2">(٢١٦٩٠)</span>، و ٥/ ١٦٩ <span class="c2">(٢١٨٢١)</span> قال: حدَّثنا ابن نمير، حدَّثنا الأجلح. وفي ٥/ ١٥٦ <span class="c2">(٢١٧١٤)</span> قال: حدَّثنا يحيى، عن الأجلح. و<span class="c1">"أبو داود"</span> ٤٢٠٥ قال: حدَّثنا الحسن بن علي، حدَّثنا عبد الرَّزَّاق، حدثنا معمر، عن سعيد الجريري. و<span class="c1">"ابن ماجة"</span> ٣٦٢٢ قال: حدَّثنا أبو بكر، حدَّثنا عبد الله بن إِدريس، عن الأجلح. و<span class="c1">"التِّرمِذي"</span> ١٧٥٣ قال: حدَّثنا سويد بن نصر، أَخْبَرنا ابن المبارك، عن الأجلح. و<span class="c1">"النَّسائي"</span> ٨/ ١٣٩، وفي <span class="c1">"الكبرى"</span> ٩٢٩٧ قال: أَخْبَرنا يعقوب بن إِبراهيم،<span class="c5"> قال:</span> حدَّثنا يحيى بن سعيد، عن الأجلح. وفي ٨/ ١٣٩، وفي <span class="c1">"الكبرى"</span> ٩٢٩٩ قال: أَخْبَرنا محمد بن عبد الرَّحْمان بن أشعث،<span class="c5"> قال:</span> حدثني محمد بن عيسى،<span class="c5"> قال:</span> حدَّثنا هُشيم،<span class="c5"> قال:</span> أخبرني ابن أبي ليلى، عن الأجلح، فلقيت الأجلح فحدثني. وفي ٨/ ١٣٩، وفي <span class="c1">"الكبرى"</span> ٩٢٩٨ قال: أَخْبَرنا قتيبة،<span class="c5"> قال:</span> حدَّثنا عبثر، عن الأجلح. و<span class="c1">"ابن حِبان"</span> ٥٤٧٤ قال: أَخْبَرنا عمر بن محمد،<span class="c5"> قال:</span> حدَّثنا محمد بن عبد الملك بن زنجويه،<span class="c5"> قال:</span> حدَّثنا عبد الرزاق، حدثنا معمر بن راشد، عن الجريري.<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p6"></span>كلاهما <span class="c2">(سعيد الجريري، والأجلح)</span> عن عبد الله بن بريدة الأسلمي، عن أبي الأسود، فذكره.<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p7"></span>أخرجه النسائي ٨/ ١٣٩، وفي <span class="c1">"الكبرى"</span> ٩٣٠٠ قال أَخْبَرنا حميد بن مسعدة،<span class="c5"> قال:</span> حدَّثنا<a href="#p7" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>