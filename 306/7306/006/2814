<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>أخرجه أحمد ٣/ ٢٩ <span class="c2">(١١٢٦١)</span> قال: حدَّثنا حَسَن. و<span class="c1">"عَبد بن حُميد"</span> ٩٣٤ قال: حدَّثنا يَحيى بن إِسْحَاق.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>كلاهما <span class="c2">(حَسَن، ويَحيى)</span> قالا: حدَّثنا ابن لَهِيعَة، عن أَبي الهَيْثَم , فذكره.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>٤٢٤٨ - عَنْ عَطَاءِ بْنِ يَزِيدَ اللَّيْثِيِّ، عَنْ أَبِي سَعِيدٍ الْخُدْرِيِّ،<span class="c5"> أَنَّ رَسُولَ اللهِ صلى الله عليه وسلم قَالَ:</span><a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>إِذَا سَمِعْتُمُ النِّدَاءَ فَقُولُوا مِثْلَ مَا يَقُولُ الْمُؤَذِّنُ.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>-<span class="c5"> وفي رواية:</span> أَنَّ النَّبِيَّ صلى الله عليه وسلم كَانَ يَقُولُ مِثْلَ مَا يَقُولُ الْمُؤَذِّنُ.<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p6"></span>أخرجه مالك في <span class="c1">"الموطأ"</span> ١٧٣. و<span class="c1">"أحمد"</span> ٣/ ٦ <span class="c2">(١١٠٣٣)</span> قال: حدَّثنا عَبْد الرَّحْمن بن مَهْدِي، حدَّثنا مالك. وفي ٣/ ٥٣ <span class="c2">(١١٥٢٤)</span> قال: حدَّثنا يَحيى، عن مالك <span class="c2">(ح)</span> وحدَّثنا عَبْد الرَّحْمن، حدَّثنا مالك. وفي ٣/ ٧٨ <span class="c2">(١١٧٦٤)</span> قال: حدَّثنا مُحَمد بن جَعْفَر، غُنْدَر، حدَّثنا مالك بن أَنَس. وفي ٣/ ٩٠ <span class="c2">(١١٨٨٢)</span> قال: حدَّثنا عُثْمَان بن عُمَر، أنبأنا مالك، ويُونُس بن يَزِيد. و<span class="c1">"الدارِمِي"</span> ١٢٠١ قال: أخبرنا عُثْمَان بن عُمَر، أخبرنا يُونُس. و<span class="c1">"البُخَارِي"</span> ١/ ١٥٩ <span class="c2">(٦١١)</span> قال: حدَّثنا عَبْد اللهِ بن يُوسُف،<span class="c5"> قال:</span> أخبرنا مالك. و<span class="c1">"مسلم"</span> ٢/ ٤ <span class="c2">(٧٧٧)</span> قال: حدَّثني يَحيى بن يَحيى،<span class="c5"> قال:</span> قرأْتُ على مالك. و<span class="c1">"أبو داود"</span> ٥٢٢ قال: حدَّثنا عَبْد اللهِ بن مَسْلَمَة القَعْنَبِي، عن مالك. و<span class="c1">"ابن ماجة"</span> ٧٢٠ قال: حدَّثنا أَبو كُرَيْب، وأبو بَكْر بن أَبي شَيْبَة،<span class="c5"> قالا:</span> حدَّثنا زَيْد بن الحُبَاب، عن مالك بن أَنَس. والتِّرْمِذِيّ<span class="c1">" ٢٠٨ قال: حدَّثنا إِسْحَاق بن مُوسَى الأَنْصَارِي، حدَّثنا مَعْن، حدَّثنا مالك <span class="c2">(ح)</span> قال: وحدَّثنا قُتَيْبَة، عن مالك. و"</span>عَبْد الله بن أحمد<span class="c1">" ٣/ ٦ <span class="c2">(١١٠٣٤)</span> قال: حدَّثناه عَبْد اللهِ بن عَوْن الخَرَّاز، ومُصْعَب الزُّبَيْرِي،<span class="c5"> قالا:</span> حدَّثنا مالك بن أَنَس. و"</span>النَّسائي<span class="c1">" ٢/ ٢٣، وفي "</span>الكبرى<span class="c1">" ١٦٤٩ قال: أخبرنا قُتَيْبَة، عن مالك. وفي "</span>عمل اليوم والليلة<span class="c1">" ٣٤ قال: أخبرنا عَمْرو بن علي،<span class="c5"> قال:</span> حدَّثنا يَحيى،<span class="c5"> قال:</span> حدَّثنا مالك. و"</span>ابن خزيمة" ٤١١ قال: حدَّثنا عَمْرو بن علي، حدَّثنا يَحيى بن سَعِيد،<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>