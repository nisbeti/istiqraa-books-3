<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>أخرجه عبد الرَّزَّاق <span class="c2">(٥٤١٦)</span> عن مالك. و <span class="c2">((أحمد)</span>)]]. وفي ٢/ ٢٨٠ <span class="c2">(٧٧٥٠)</span> قال: حدَّثنا عبد الرزاق، حدَّثنا مالك. وفي ٢/ ٣٩٣ <span class="c2">(٩٠٩٠)</span> قال: حدَّثنا حسين، حدَّثنا ابن أبي ذئب. وفي ٢/ ٣٩٦ <span class="c2">(٩١٣٦)</span> قال: حدَّثنا إبراهيم بن أبي العباس، حدَّثنا أبو أويس. وفي ٢/ ٤٧٤ <span class="c2">(١٠١٣٢)</span> قال: حدَّثنا يحيى، عن مالك. وفي ٢/ ٤٨٥ <span class="c2">(١٠٣٠٦)</span> قال: قرأت على عبد الرحمن: مالك. وفي ٢/ ٥١٨ <span class="c2">(١٠٧٣١)</span> قال: حدَّثنا عثمان بن عمر، أنبأنا يونس. وفي ٢/ ٥٣٢ <span class="c2">(١٠٩٠١)</span> قال: حدَّثنا حماد، عن مالك، وابن أبي ذئب. و <span class="c2">((الدارِمِي)</span>)]] ١٥٤٩ قال: حدَّثنا خالد بن مخلد، حدَّثنا مالك. وفي <span class="c2">(١٥٥٠)</span> قال: أَخْبَرنا المعلى بن أسد، حدَّثنا وهيب، عن معمر. و <span class="c2">((البُخاري)</span>)]] ٩٣٤ قال: حدَّثنا يحيى بن بكير،<span class="c5"> قال:</span> حدَّثنا الليث، عن عُقيل. و <span class="c2">((مسلم)</span>)]] ١٩١٨ قال: حدَّثنا قتيبة بن سعيد، ومحمد بن رمح بن المهاجر،<span class="c5"> قال ابن رمح:</span> أَخْبَرنا الليث، عن عُقيل. و <span class="c2">((أبو داود)</span>)]] ١١١٢ قال: حدَّثنا القعنبي، عن مالك. و <span class="c2">((ابن ماجة)</span>)]] ١١١٠ قال: حدَّثنا أبو بكر بن أبي شيبة، حدَّثنا شبابة بن سوار، عن ابن أبي ذئب. و <span class="c2">((التِّرمِذي)</span>)]] ٥١٢ قال: حدَّثنا قتيبة، حدَّثنا الليث، عن عُقيل. و <span class="c2">((النَّسائي)</span>)]] في <span class="c2">((الكبرى)</span>)]] ١٧٣٨ قال: حدَّثنا عَمرو بن علي،<span class="c5"> قال:</span> حدَّثنا يحيى،<span class="c5"> قال:</span> حدَّثنا مالك. وفي ٣/ ١٠٣، وفي <span class="c2">((الكبرى)</span>)]] ١٧٣٩ قال: أَخْبَرنا قتيبة،<span class="c5"> قال:</span> حدَّثنا الليث، عن عُقيل. وفي ٣/ ١٨٨، وفي <span class="c2">((الكبرى)</span>)]] ١٧٩٣ قال: أَخْبَرنا محمد بن سلمة، والحارث بن مسكين، قراءة عليه وأنا أسمع، عن ابن القاسم،<span class="c5"> قال:</span> حدثني مالك. و <span class="c2">((ابن خزيمة)</span>)]] ١٨٠٥ قال: حدَّثنا يونس بن عبد الأعلى،<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>