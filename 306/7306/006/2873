<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>٢/ ١٤٣ <span class="c2">(١٤٤٧)</span> قال: حدَّثنا عَبْد اللهِ بن يُوسُف، أخبرنا مالك. وفي ٢/ ١٤٤ <span class="c2">(١٤٤٧ م)</span> قال: حدَّثنا مُحَمد. بن المُثَنَّى، حدَّثنا عَبْد الوَهَّاب،<span class="c5"> قال:</span> حدَّثني يَحيى بن سَعِيد. و<span class="c1">"مسلم"</span> ٣/ ٦٦ <span class="c2">(٢٢٢٥)</span> قال: حدَّثني عَمْرو بن مُحَمد بن بُكَيْر النَّاقِد، حدَّثنا سُفْيان بن عُيينة. وفي ٣/ ٦٦ <span class="c2">(٢٢٢٦)</span> قال: حدَّثنا مُحَمد بن رُمح بن المهاجر، أخبرنا اللَّيْث <span class="c2">(ح)</span> وحدَّثني عَمْرو النَّاقِد، حدَّثنا عَبْد اللهِ بن إِدْرِيس، كلاهما عن يَحيى بن سَعِيد. وفي ٣/ ٦٦ <span class="c2">(٢٢٢٧)</span> قال: حدَّثنا مُحَمد بن رافع، حدَّثنا عَبْد الرَّزَّاق، أخبرنا ابن جُرَيْج. و<span class="c1">"أبو داود"</span> ١٥٥٨ قال: حدَّثنا عَبْد اللهِ بن مَسْلَمَة،<span class="c5"> قال:</span> قراْتُ على مالك بن أَنَس. والتِّرْمِذِيّ<span class="c1">" ٦٢٦ قال: حدَّثنا قُتَيْبَة، حدَّثنا عَبْد العَزِيز بن مُحَمد. وفي <span class="c2">(٦٢٧)</span> قال: حدَّثنا مُحَمد بن بَشَّار، حدَّثنا عَبْد الرَّحْمان بن مَهْدِي، حدَّثنا سُفْيان، وشُعْبة، ومالك بن أَنَس. و"</span>النَّسائي<span class="c1">" ٥/ ١٧، وفي "</span>الكبرى<span class="c1">" ٢٢٣٧ قال: أخبرنا عُبَيْد الله بن سَعِيد.<span class="c5"> قال:</span> حدَّثنا سُفْيان <span class="c2">(ح)</span> وأخبرنا مُحَمد بن المُثَنَّى، ومُحَمد بن بَشَّار، عن عَبْد الرَّحْمان، عن سُفْيان، وشُعْبة، ومالك. وفي ٥/ ١٨، وفي<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></span></p>
<p><span class="anchor" id="p2"></span>"الكبرى<span class="c1">" ٢٢٣٨ قال؟ أخبرنا عِيسَى بن حَمَّاد،<span class="c5"> قال:</span> أنبأنا اللَّيْث، عن يَحيى بن سَعِيد. وفي ٥/ ٣٦، وفي "</span>الكبرى<span class="c1">" ٢٢٦٥ قال: أخبرنا يَحيى بن حبيب بن عربي، عن حَمَّاد.<span class="c5"> قال:</span> حدَّثنا يَحيى، وهو ابن سَعِيد. وفي ٥/ ٤٠، وفي "</span>الكبرى<span class="c1">" ٢٢٧٥ قال: أخبرنا إِسْمَاعِيل بن مسعود.<span class="c5"> قال:</span> حدَّثنا يَزِيد بن زريع.<span class="c5"> قال:</span> حدَّثنا روح بن القاسم. وفي ٥/ ٤٠، وفي "</span>الكبرى<span class="c1">" ٢٢٧٨ قال: أخبرنا أحمد بن عَبْدَة.<span class="c5"> قال:</span> حدَّثنا حَمَّاد، عن يَحيى بن سَعِيد، وعُبَيْد اللهِ بن عُمَر. و"</span>ابن خزيمة" ٢٢٦٣ قال: حدَّثنا عَبْد الجَبَّار بن العَلَاء، حدَّثنا سُفْيان <span class="c2">(ح)</span> وحدَّثنا أحمد بن عبدة، أخبرنا مُحَمد بن دِينَار <span class="c2">(ح)</span> وحدَّثنا أحمد بن عبدة، حدَّثنا حَمَّاد بن زَيْد، حدَّثنا يَحيى بن سَعِيد، وعُبَيْد اللهِ بن عُمَر <span class="c2">(ح)</span> وحدَّثنا أبو مُوسَى، عن عَبْد الرَّحْمان، هو ابن مَهْدِي، حدَّثنا سُفْيان، ومالك، وشُعْبة. وفي <span class="c2">(٢٢٩٣)</span> قال: حدَّثنا مُحَمد بن بَشَّار، حدَّثنا عَبْد الأَعْلَى، حدَّثنا عَبْد اللهِ. وفي <span class="c2">(٢٢٩٤)</span> قال: حدَّثنا عِمْرَان بن مُوسَى القزاز، حدَّثنا حَمَّاد، يَعْنِي ابن زَيْد، حدَّثنا يَحيى بن سَعِيد. وفي <span class="c2">(٢٢٩٥)</span> قال: حدَّثنا أحمد بن عَبْدَة، أخبرنا يَزِيد بن هارون، أخبرنا يَحيى بن سَعِيد. وفي <span class="c2">(٢٢٩٨)</span><a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>