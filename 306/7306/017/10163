<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>و<span class="c1">"النَّسائي"</span> ٨/ ٤٨، وفي <span class="c1">"الكبرى"</span> ٦٩٩٣ قال: أخبرنا أحمد بن عمرو بن السرح،<span class="c5"> قال:</span> حدَّثنا عبد الله بن وهب. و<span class="c1">"ابن حِبَّان"</span> ٦٠٢٠ قال: أخبرنا محمد بن الحسن بن قتيبة،<span class="c5"> قال:</span> حدَّثنا حرملة بن يحيى،<span class="c5"> قال:</span> حدَّثنا ابن وهب.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>كلاهما <span class="c2">(عثمان بن عمر، وعبد الله بن وهب)</span> عن يونس، عن ابن شهاب، عن سعيد بن المسيب، وأبي سلمة، فذكراه.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>- ١ - أخرجه مالك <span class="c1">"الموطأ"</span> <span class="c2">(٢)</span> ٥٣٣. وعَبْد الرَّزَّاق <span class="c2">(١٨٣٣٨)</span> عن معمر. و<span class="c1">"أحمد"</span> ٢/ ٢٣٦ <span class="c2">(٧٢١٦)</span> قال: حدَّثنا عبد الرحمن بن مهدي، عن مالك. وفي ٢/ ٢٧٤ <span class="c2">(٧٦٨٩)</span> قال: حدَّثنا عبد الرزاق، أخبرنا معمر. و<span class="c1">"البُخاري"</span> ٥٧٥٨ قال: حدَّثنا سعيد بن عفير، حدَّثنا الليث،<span class="c5"> قال:</span> حدثني عبد الرحمن بن خالد. وفي <span class="c2">(٥٧٥٩)</span> قال: حدَّثنا قتيبة، عن مالك. وفي <span class="c2">(٦٩٠٤)</span> قال: حدَّثنا عبد الله بن يوسف، أخبرنا مالك <span class="c2">(ح)</span> وحدثنا إسماعيل، حدَّثنا مالك. و<span class="c1">"مسلم"</span> ٤٤٠٧ قال: حدَّثنا يحيى بن يحيى،<span class="c5"> قال:</span> قرأتُ على مالك. وفي <span class="c2">(٤٤١٠)</span> قال: وحدثنا عبد بن حُميد، أخبرنا عبد الرزاق، أخبرنا معمر. و<span class="c1">"النَّسائي"</span> ٨/ ٤٨، وفي <span class="c1">"الكبرى"</span> ٦٩٩٤ قال: أخبرنا أحمد بن عمرو بن السرح،<span class="c5"> قال:</span> حدَّثنا ابن وهب،<span class="c5"> قال:</span> أخبرني مالك. و<span class="c1">"ابن حِبَّان"</span> ٦٠١٧ قال: أخبرنا عمر بن سعيد بن سنان،<span class="c5"> قال:</span> أخبرنا أحمد بن أبى بكر، عن مالك. ثلاثتهم <span class="c2">(مالك، ومعمر، وعبد الرحمن بن خالد)</span> عن ابن شهاب.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>٢ - وأخرجه ابن أبي شَيْبَة ٩/ ٢٥٠ <span class="c2">(٢٧٢٥٩)</span> قال: حدَّثنا عبد الرحيم بن سليمان. وفي ١٠/ ١٦٣ <span class="c2">(٢٩٠٥٤)</span> قال: حدَّثنا محمد بن بشر العبدي. و<span class="c1">"أحمد"</span> ٢/ ٤٣٨ <span class="c2">(٩٦٥٣)</span> قال: حدَّثنا يحيى، يعني ابن سعيد. وفي ٢/ ٤٩٨ <span class="c2">(١٠٤٧٢)</span> قال: حدَّثنا يزيد. و<span class="c1">"أبو داود"</span> ٤٥٧٩ قال: حدَّثنا إبراهيم بن موسى الرازي، حدَّثنا عيسى. و<span class="c1">"ابن ماجة"</span> ٢٦٣٩ قال: حدَّثنا أبو بكر بن أبي شيبة، حدَّثنا محمد بن بشر. و<span class="c1">"التِّرمِذي"</span> ١٤١٠ قال: حدَّثنا علي بن سعيد الكندي الكوفي، حدَّثنا ابن أبي زائدة. و<span class="c1">"أبو يَعْلَى"</span> ٥٩١٧ قال: حدَّثنا أبو خيثمة، حدثنا يحيى بن سعيد. و<span class="c1">"ابن حِبَّان"</span> ٦٠٢٢ قال: أخبرنا عبد الله بن محمد الأزدي،<span class="c5"> قال:</span> حدَّثنا إسحاق بن إبراهيم،<span class="c5"> قال:</span> أخبرنا عيسى بن يونس. ستتهم <span class="c2">(عبد الرحيم بن سليمان، ومحمد بن بشر، ويحيى بن سعيد، ويزيد بن هارون، وعيسى بن يونس، ويحيى بن زكريا بن أبي زائدة)</span> عن محمد بن عمرو.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>كلاهما <span class="c2">(ابن شهاب، ومحمد بن عَمْرو)</span> عَنْ أَبِي سَلَمَةَ بْنِ عَبْدِ الرَّحْمَانِ بْنِ عَوْفٍ، عَنْ أَبِي هُرَيْرَةَ؛<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>