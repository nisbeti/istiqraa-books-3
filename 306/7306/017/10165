<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>جَرْحُ الْعَجْمَاءِ جُبَارٌ، وَالْبِئْرُ جُبَارٌ، وَالْمَعْدِنُ جُبَارٌ، وَفِي الرِّكَازِ الْخُمُسُ.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>أخرجه مالك <span class="c1">"الموطأ"</span> ١٧٠ و ٥٤١. وعَبْد الرَّزَّاق <span class="c2">(١٨٣٧٣)</span> عن معمر، وابن جريج. و<span class="c1">"الحُمَيدي"</span> ١٠٧٩ قال: حدَّثنا سفيان. و<span class="c1">"ابن أبي شَيْبَة"</span> ٩/ ٢٧١ <span class="c2">(٢٧٣٦٥)</span> قال: حدَّثنا سفيان بن عيينة. و<span class="c1">"أحمد"</span> ٢/ ٢٣٩ <span class="c2">(٧٢٥٣)</span> قال: حدَّثنا سُفيان. وفي ٢/ ٢٥٤ <span class="c2">(٧٤٥٠)</span> قال: حدَّثنا عبد الرزاق، أخبرنا ابن جُرَيج. وفي ٢/ ٢٧٤ <span class="c2">(٧٦٩٠)</span> قال: حدَّثنا عبد الرزاق، حدَّثنا مَعْمر. وفي ٢/ ٢٨٥ <span class="c2">(٧٨١٥)</span> قال: حدَّثنا محمد بن بكر، أخبرنا ابن جُرَيج. و<span class="c1">"الدارِمِي"</span> ١٦٦٨ و ٢٣٧٨ قال: أخبرنا خالد بن مَخْلد، حدَّثنا مالك. و<span class="c1">"البُخاري"</span> ١٤٩٩ قال: حدَّثنا عبد الله بن يوسف، أخبرنا مالك. وفي <span class="c2">(٦٩١٢)</span> قال: حدَّثنا عبد الله بن يوسف، حدَّثنا اللَّيْث. و<span class="c1">"مسلم"</span> ٤٤٨٥ قال: حدَّثنا يحيى بن يحيى، ومحمد بن رُمْح،<span class="c5"> قالا:</span> أخبرنا اللَّيْث <span class="c2">(ح)</span> وحدثنا قتيبة بن سعيد، حدَّثنا لَيْث. وفي <span class="c2">(٤٤٨٦)</span> قال: وحدَّثنا يحيى بن يحيى، وأبو بكر بن أبي شَيْبة، وزُهير بن حرب، وعبد الأعلى بن حَمَّاد، كلهم عن ابن عُيَيْنَة <span class="c2">(ح)</span> وحدثنا محمد بن رافع، حدَّثنا إسحاق، يعني ابن عيسى، حدَّثنا مالك. و<span class="c1">"أبو داود"</span> ٣٠٨٥ و ٤٥٩٣ قال: حدَّثنا مُسَدَّد، حدَّثنا سُفيان. و<span class="c1">"ابن ماجة"</span> ٢٥٠٩ قال: حدَّثنا محمد بن ميمون المكي، وهشام بن عمار،<span class="c5"> قالا:</span> حدثنا سُفيان بن عُيَيْنَة. و<span class="c1">"التِّرمِذي"</span> ٦٤٢ و ١٣٧٧ قال: حدَّثنا قتيبة، حدَّثنا اللَّيْث بن سَعْد. و<span class="c1">"النَّسائي"</span> ٥/ ٤٥، وفي <span class="c1">"الكبرى"</span> ٢٢٨٦ قال: أخبرنا إسحاق بن إبراهيم،<span class="c5"> قال:</span> أنبأنا عبد الرزاق،<span class="c5"> قال:</span> حدَّثنا مَعْمر. وفي ٥/ ٤٥، وفي <span class="c1">"الكبرى"</span> ٢٢٨٨ و ٥٨٠٣ قال:<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>أخبرنا قتيبة، عن مالك. وفي <span class="c1">"الكبرى"</span> ٥٨٠٢ قال: أخبرنا قتيبة بن سعيد،<span class="c5"> قال:</span> حدَّثنا اللَّيْث. و<span class="c1">"ابن خزيمة"</span> ٢٣٢٦ قال: حدَّثنا عبد الله بن إسحاق الجوهري، حدَّثنا أبو عاصم، عن مالك بن أنس. و<span class="c1">"ابن حِبَّان"</span> ٦٠٠٥ قال: أخبرنا الحسين بن إدريس، أخبرنا أحمد بن أبى بكر، عن مالك. وفي <span class="c2">(٦٠٠٦)</span> قال: أخبرنا ابن قتيبة، حدثنا يزيد بن موهب، حدثني الليث بن سعد. وفي <span class="c2">(٦٠٠٧)</span> قال: أخبرنا الفضل بن الحباب، حدثنا أبو الوليد، حدثنا ليث.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span>خمستهم <span class="c2">(مالك، ومعمر، وابن جُرَيج، وسُفيان بن عُيينة، واللَّيْث بن سَعْد)</span> عن ابن شهاب الزُّهري، عن سعيد بن المسيب، وأبي سلمة، فذكراه.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>- وأخرجه ابن أبي شَيبْة ٣/ ٢٢٥ <span class="c2">(١٠٧٧٩)</span> و ١٢/ ٢٥٦ <span class="c2">(٣٢٦٩٧)</span> قال: حدَّثنا ابن عيينة. و<span class="c1">"ابن ماجة"</span> ٢٦٧٣ قال: حدَّثنا أبو بكر بن أبي شَيبْة،<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>