<p><span class="anchor" id="p6"></span>١ - أخرجه مالك <span class="c2">((الموطأ)</span>)]] صفحة ٣٣. وعبد الرزاق <span class="c2">(٣٣٦٩ و ٥٤٧٨)</span> عن معمر. وفي <span class="c2">(٣٣٧٠)</span> عن ابن جريج. و <span class="c2">((الحميدي)</span>)]] ٩٤٦ قال: حدَّثنا سفيان. و <span class="c2">((أحمد)</span>)]] ٢/ ٢٤١ <span class="c2">(٧٢٨٢)</span> قال: حدَّثنا سفيان. وفي ٢/ ٢٧٠ <span class="c2">(٧٦٥٢)</span> و ٢/ ٢٨٠ <span class="c2">(٧٧٥٢)</span> قال: حدَّثنا عبد الرزاق، حدَّثنا معمر. وفي ٢/ ٣٧٥ <span class="c2">(٨٨٧٠)</span> قال: حدَّثنا محمد بن عبيد، حدَّثنا عبيد الله. و <span class="c2">((الدارِمِي)</span>)]] ١٢٢٠ قال: أَخْبَرنا محمد بن كثير، عن الأوزاعي. وفي <span class="c2">(١٢٢١)</span> قال: أَخْبَرنا محمد بن يوسف، حدَّثنا ابن عيينة. و <span class="c2">((البُخاري)</span>)]] ٥٨٠، وفي <span class="c2">((القراءة خلف الإمام)</span>)]] ٢٠٦ و ٢٢٥ قال: حدَّثنا عبد الله بن يوسف،<span class="c5"> قال:</span> أَخْبَرنا مالك. وفي <span class="c2">((القراءة خلف الإمام)</span>)]] ٢٠٥ قال: حدَّثنا يحيى بن قزعة،<span class="c5"> قال:</span> حدَّثنا مالك. وفي <span class="c2">(٢١٠)</span> قال: حدَّثنا أبو اليمان، الحكم بن نافع،<span class="c5"> قال:</span> أَخْبَرنا شعيب. وفي <span class="c2">(٢١١)</span> قال: حدَّثنا أيوب بن سليمان بن بلال،<span class="c5"> قال:</span> حدثني أبو بكر، عن سليمان،<span class="c5"> قال:</span> أخبرني عبيد الله بن عمر، ويحيى بن سعيد، ويونس. وفي <span class="c2">(٢١٢)</span> قال: حدَّثنا عبد الله،<span class="c5"> قال:</span> حدَّثنا الليث بن سعد،<span class="c5"> قال:</span> حدثني يزيد بن الهاد. وفي <span class="c2">(٢١٣)</span> قال: حدَّثنا محمد بن مقاتل،<span class="c5"> قال:</span> أنبأنا عبد الله،<span class="c5"> قال:</span> أَخْبَرنا يونس. وفي <span class="c2">(٢١٥)</span> قال: حدَّثنا عبد الله بن محمد،<span class="c5"> قال:</span> حدَّثنا عثمان بن عمر،<span class="c5"> قال:</span> حدَّثنا يونس. وفي <span class="c2">(٢١٦)</span> قال: حدَّثنا محمود،<span class="c5"> قال:</span> حدَّثنا عبد الرزاق،<span class="c5"> قال:</span> حدَّثنا ابن جريج. وفي <span class="c2">(٢١٧)</span> قال: حدَّثنا عبد الله بن صالح،<span class="c5"> قال:</span> حدثني الليث،<span class="c5"> قال:</span> حدثني يونس. و <span class="c2">((مسلم)</span>)]] ١٣١٢ قال: حدَّثنا يحيى بن يحيى،<span class="c5"> قال:</span> قرأت على مالك. وفي <span class="c2">(١٣١٣)</span> قال: وحدثني حرملة بن يحيى، أَخْبَرنا ابن وهب، أخبرني<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>