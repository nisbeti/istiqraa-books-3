<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>أخرجه مُسْلم ٨/ ١٧٦ <span class="c2">(٧٣٨٣)</span> قال: حدَّثني حَرْمَلَة بن يَحيى التُّجِيبِي، حدَّثنا عَبْد الله ابن وَهْب، حدَّثني أبو شُرَيْح، أن عَبْد الكَرِيم بن الحارث حدَّثه، فذكره.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>١١٤١٠ - عَنْ عَبْدِ الرَّحْمَانِ بْنِ جُبَيْرٍ،<span class="c5"> أَنَّ الْمُسْتَوْرِدَ قَالَ:</span> بَيْنَا أَنَا عِنْدَ عَمْرِو بْنِ الْعَاصِ،<span class="c5"> فَقُلْتُ لَهُ:</span> سَمِعْتُ رَسُولَ اللهِ صلى الله عليه وسلم يَقُولُ:<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span>أَشَدُّ النَّاسِ عَلَيْكُمُ الرُّومُ، وَإِنَّمَا هَلَكَتُهُمْ مَعَ السَّاعَةِ.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span><span class="c5">فَقَالَ لَهُ عَمْرٌو:</span> أَلَمْ أَزْجُرْكَ عَنْ مِثْلِ هَذَا.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span>أخرجه أحمد ٤/ ٢٣٠ <span class="c2">(١٨١٨٦)</span> قال: حدَّثنا حَسَن بن مُوسَى، حدَّثنا ابن لَهِيعَة، حدَّثنا الحارث بن يَزِيد، عن عَبْد الرَّحْمان بن جُبَيْر، فذكره.<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p6"></span>١١٤١١ - عَنْ قَيْسِ بْنِ أَبِي حَازِمٍ،<span class="c5"> قَالَ:</span> سَمِعْتُ الْمُسْتَوْرِدَ،<span class="c5"> أَخَا بَنِي فِهْرٍ يَقُولُ:</span> سَمِعْتُ رَسُولَ اللهِ صلى الله عليه وسلم يَقُولُ:<a href="#p6" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p7"></span>مَا مَثَلُ الدُّنْيَا فِي الآخِرَةِ، إِلَاّ مَثَلُ مَا يَجْعَلُ أَحَدُكُمْ إِصْبَعَهُ فِي الْيَمِّ، فَلْيَنْظُرْ بِمَ يَرْجِعُ.<a href="#p7" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p8"></span>أخرجه الحُمَيْدِي <span class="c2">(٨٥٥)</span> قال: حدَّثنا سُفْيان،<span class="c5"> قال:</span> حدَّثنا إِسْمَاعِيل بن أَبي خالد. و<span class="c1">"أحمد"</span> ٤/ ٢٢٨ <span class="c2">(١٨١٧١)</span> قال: حدَّثنا وَكِيع،<span class="c5"> قال:</span> حدَّثنا إِسْمَاعِيل بن أَبي خالد. وفي ٤/ ٢٢٩ <span class="c2">(١٨١٧٢)</span> قال: حدَّثنا ابن نُمَيْر، حدَّثنا إِسْمَاعِيل <span class="c2">(ح)</span> ويَزِيد بن هارون،<span class="c5"> قال:</span> أنبأنا إِسْمَاعِيل. وفي <span class="c2">(١٨١٧٥)</span> قال: حدَّثنا جَعْفَر ابن عَوْن،<span class="c5"> قال:</span> حدَّثنا إِسْمَاعِيل. وفي <span class="c2">(١٨١٧٧)</span> قال: حدَّثنا يَحيى بن سَعِيد، عن إِسْمَاعِيل. وفي ٤/ ٢٣٠ <span class="c2">(١٨١٨٣)</span> قال: حدَّثنا يُونُس بن مُحَمد، حدَّثنا حَمَّاد بن زَيْد، حدَّثنا مُجَالد. وفي <span class="c2">(١٨١٨٤)</span> قال: حدَّثنا خَلَف بن الوَلِيد، حدَّثنا عَبَّاد بن عَبَّاد، يَعْنِي المُهَلَّبِي، حدَّثنا المُجَالد بن سَعِيد. و<span class="c1">"مسلم"</span>٨/ ١٥٦ <span class="c2">(٧٢٩٩)</span> قال: حدَّثنا أبو بَكْر بن أَبي شَيْبَة، حدَّثنا عَبْد الله بن إِدْرِيس <span class="c2">(ح)</span> وحدَّثنا ابن نُمَيْر، حدَّثنا أَبي، ومُحَمد بن بِشْر <span class="c2">(ح)</span><a href="#p8" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>